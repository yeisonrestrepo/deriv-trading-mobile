{
  "compilerOptions": {
    // ‚ö° CONFIGURACI√ìN CLAVE PARA import.meta
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    // üéØ CONFIGURACI√ìN PARA VITE
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // üì¶ CONFIGURACI√ìN PARA VUE
    "jsx": "preserve",
    "jsxImportSource": "vue",
    
    // üîß CONFIGURACI√ìN ESTRICTA
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    
    // üìÅ RESOLUCI√ìN DE M√ìDULOS
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@views/*": ["./src/views/*"],
      "@stores/*": ["./src/stores/*"],
      "@services/*": ["./src/services/*"],
      "@composables/*": ["./src/composables/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./src/assets/*"]
    },
    
    // üåê LIBRER√çAS INCLUIDAS
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    
    // üìù TIPOS ADICIONALES
    "types": [
      "node",
      "vite/client"
    ],
    
    // üîÑ CONFIGURACI√ìN DE EMISI√ìN
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmitOnError": true,
    
    // üé≠ CONFIGURACI√ìN ADICIONAL
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "vite.config.ts",
    "env.d.ts"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}